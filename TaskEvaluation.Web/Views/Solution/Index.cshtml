@model IEnumerable<SolutionDTO>

@{
    ViewData["Title"] = "Solutions";
}

<h1>Solutions</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Solution File</th>
            <th scope="col">Notes</th>
            <th scope="col">Assignment Title</th>
            <th scope="col">Student</th>
            <th scope="col">Evaluation Grade</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-dark">
                <td>
                    @Html.DisplayFor(modelItem => item.SolutionFile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Assignment.Title) <!-- Assuming Title is a property of Assignment -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FullName) <!-- Assuming Name is a property of Student -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EvaluationGrade.Grade) <!-- Assuming Grade is a property of EvaluationGrade -->
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
   
    </tbody>
</table>
